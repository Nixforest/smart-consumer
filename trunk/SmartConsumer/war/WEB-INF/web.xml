<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	
    <servlet>
        <servlet-name>DealManager</servlet-name>
        <servlet-class>com.gae.java.smartconsumer.servlet.DealManagerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DealCollector</servlet-name>
        <servlet-class>com.gae.java.smartconsumer.servlet.DealCollectorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveDeal</servlet-name>
        <servlet-class>com.gae.java.smartconsumer.servlet.RemoveDealServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveAllDeal</servlet-name>
        <servlet-class>com.gae.java.smartconsumer.servlet.RemoveAllDealServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AutoCollector</servlet-name>
        <servlet-class>com.gae.java.smartconsumer.servlet.AutoCollectorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AutoUpdate</servlet-name>
        <servlet-class>com.gae.java.smartconsumer.servlet.AutoUpdateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TaskQueue</servlet-name>
        <servlet-class>com.gae.java.smartconsumer.servlet.TaskQueueServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginRequired</servlet-name>
        <servlet-class>com.gae.java.smartconsumer.servlet.LoginRequiredServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Test</servlet-name>
        <servlet-class>com.gae.java.smartconsumer.servlet.TestServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>DealManager</servlet-name>
        <url-pattern>/dealmanager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DealCollector</servlet-name>
        <url-pattern>/getdeal</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveDeal</servlet-name>
        <url-pattern>/remove</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveAllDeal</servlet-name>
        <url-pattern>/removeall</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Test</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AutoCollector</servlet-name>
        <url-pattern>/autocollector</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AutoUpdate</servlet-name>
        <url-pattern>/autoupdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TaskQueue</servlet-name>
        <url-pattern>/taskqueue</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginRequired</servlet-name>
        <url-pattern>/_ah/login_required</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <param-name>config</param-name>
            <param-value>
                /WEB-INF/struts-config.xml
                </param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.app</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>smartconsumer.app</welcome-file>
    </welcome-file-list>
    
    <!-- <security-constraint>
       <web-resource-collection>
               <web-resource-name>smartconsumer</web-resource-name>
               <url-pattern>/smartconsumer</url-pattern>
       </web-resource-collection>
       <auth-constraint>
           <role-name>*</role-name>
       </auth-constraint>
    </security-constraint> -->
    
    <jsp-config>
    <taglib>
      <taglib-uri>/WEB-INF/struts-bean.tld</taglib-uri>
      <taglib-location>/WEB-INF/struts-bean.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>/WEB-INF/struts-html.tld</taglib-uri>
      <taglib-location>/WEB-INF/struts-html.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>/WEB-INF/struts-logic.tld</taglib-uri>
      <taglib-location>/WEB-INF/struts-logic.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>/WEB-INF/struts-nested.tld</taglib-uri>
      <taglib-location>/WEB-INF/struts-nested.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>/WEB-INF/struts-tiles.tld</taglib-uri>
      <taglib-location>/WEB-INF/struts-tiles.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>/WEB-INF/fmt.tld</taglib-uri>
      <taglib-location>/WEB-INF/fmt.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>/WEB-INF/c.tld</taglib-uri>
      <taglib-location>/WEB-INF/c.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>/WEB-INF/sql.tld</taglib-uri>
      <taglib-location>/WEB-INF/sql.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>/WEB-INF/x.tld</taglib-uri>
      <taglib-location>/WEB-INF/x.tld</taglib-location>
    </taglib>
    </jsp-config>
    <error-page>
        <error-code>
            500
        </error-code>
        <location>
            /error.html
        </location>
    </error-page>
    <error-page>
      <error-code>400</error-code>
      <location>/error.html</location>
  </error-page>
  <error-page>
      <error-code>404</error-code>
      <location>/error.html</location>
  </error-page>
</web-app>
