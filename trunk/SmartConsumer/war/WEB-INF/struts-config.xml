        <forward name="success" redirect="true" path="getdeal" />
    </action>
    <!-- Deal manager -->
    <action path="/dealmanager" type="com.gae.java.smartconsumer.action.admin.DealManager" scope="request">
        <forward name="success" redirect="true" path="dealmanager" />
